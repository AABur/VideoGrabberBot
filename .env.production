# Docker Production Environment Configuration
# Copy this to .env for production deployment

# Bot configuration (required - set your actual values)
TELEGRAM_TOKEN=your_telegram_token_here
ADMIN_USER_ID=your_admin_user_id_here

# Environment settings
LOG_LEVEL=INFO

# Docker container settings for production
CONTAINER_NAME=videograbber-bot-prod
RESTART_POLICY=always

# Resource limits for production
MEMORY_LIMIT=2G
CPU_LIMIT=1.0
MEMORY_RESERVATION=512M
CPU_RESERVATION=0.2

# Health check settings (more frequent for production)
HEALTHCHECK_INTERVAL=15s
HEALTHCHECK_TIMEOUT=5s
HEALTHCHECK_RETRIES=5
HEALTHCHECK_START_PERIOD=30s

# Volume names for production
DATA_VOLUME=bot_data_prod
LOGS_VOLUME=bot_logs_prod

# Logging (use json-file with rotation for production)
LOGGING_DRIVER=json-file
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5